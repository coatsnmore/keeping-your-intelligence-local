{
    "model": "tinyllama",
    "prompt": "Tell me about 10 interesting events in history where two countries agreed on something with mutual benefit. Each event should include: date, location, name, details. Respond using JSON",
    "stream": false,
    "format": {
        "$id": "https://example.com/arrays.schema.json",
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "description": "Interesting Events",
        "title": "Events",
        "type": "object",
        "properties": {
            "events": {
            "type": "array",
            "items": { "$ref": "#/$defs/event" }
            }
        },
        "$defs": {
            "event": {
                "type": "object",
                "required": ["date", "location" , "name", "details"],
                "properties": {
                    "date": {
                        "type": "string",
                        "description": "The date of the event"
                    },
                    "location": {
                        "type": "string",
                        "description": "The location of the event"
                    },
                    "name": {
                    "type": "string",
                    "description": "A brief title for the event"
                    },
                    "details": {
                    "type": "string",
                    "description": "A short description of the event. Includes a brief justification of why it is interesting."
                    }   
                }
            }
        }
    }     
}

